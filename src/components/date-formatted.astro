---
export interface Props {
  date: Date;
  className?: string;
}

const { date, className = 'text-slate-500' } = Astro.props;
---

<time datetime={date.toISOString()} class={className}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
